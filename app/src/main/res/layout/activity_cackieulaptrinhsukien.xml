<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Cackieulaptrinhsukien">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Các kiểu lập trình sự kiện "
        android:background="@color/colorAccent"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_soA"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="So a:" />
    <EditText
        android:id="@+id/editText_soA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="nhap so a" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_soB"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="So b:" />

        <EditText
            android:id="@+id/editText_soB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nhap so b"
            android:inputType="textPersonName" />
    </LinearLayout>
    <TextView
        android:id="@+id/TextView_KetQua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:gravity="center"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/button_tong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng 2 số" />

    <Button
        android:id="@+id/button_hieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiệu 2 số" />

    <Button
        android:id="@+id/button_tich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tích 2 số" />

    <Button
        android:id="@+id/button_thuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thương 2 số" />

    <Button
        android:id="@+id/button_UCLN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UCLN" />

    <Button
        android:id="@+id/button_thoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoát Chương Tình"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>